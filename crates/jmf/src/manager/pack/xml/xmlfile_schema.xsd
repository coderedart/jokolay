                        <xs:enumeration value="blue"/>
                        <xs:enumeration value="green"/>
                        <xs:enumeration value="red"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:attribute>

            <!-- Rotate -->
            <xs:attribute name="rotate-x" type="xs:decimal"/>
