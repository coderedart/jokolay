            <!-- Optional -->
            <xs:attribute name="alpha" type="xs:decimal"/>
            <xs:attribute name="behaviour">
                <xs:simpleType>
                    <xs:restriction base="xs:nonNegativeInteger">
                        <xs:minInclusive value="0"/>
